
<!-- content begin -->
<div class="no-bottom no-top" id="content">
    <div id="top"></div>
    <section id="section-hero" aria-label="section" class="jarallax">
        <img src="~/images/background/2.jpg" class="jarallax-img" alt="">
        <div class="v-center">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 offset-lg-4">
                        <div class="padding40 rounded-3 shadow-soft" data-bgcolor="#ffffff">
                            <h1>Pul çıxarışı</h1>

                            @if (TempData["Error"] != null)
                            {
                                <div style="color: red;">@TempData["Error"]</div>
                            }

                            @if (TempData["Success"] != null)
                            {
                                <div style="color: green;">@TempData["Success"]</div>
                            }

                            <form method="post" action="/Payment/Mexaric">
                                <label for="amount">Məbləğ ($):</label>
                                <input  type="number" name="amount" placeholder="Məbləğ daxil edin" max="99999"  maxlength="5" required>
                                <br />
                                <br />
                                <label for="card">Kart Nömrəsi:</label>
                                <input  type="text" name="card" placeholder="4242 4242 4242 4242" maxlength="16" required>

                                <button type="submit">Pulu Çıxart</button>
                            </form>

                            <script>
                                document.addEventListener("DOMContentLoaded", function () {
                                    let amountInput = document.querySelector("input[name='amount']");
                                    let cardInput = document.querySelector("input[name='card']");

                                    // Məbləğ inputunda yalnız rəqəmlərə icazə ver və maksimum 99999 qoy
                                    amountInput.addEventListener("input", function () {
                                        this.value = this.value.replace(/[^0-9]/g, ''); // Yalnız rəqəmlərə icazə ver
                                        if (this.value > 99999) {
                                            this.value = 99999; // Maksimum 99999 olsun
                                        }
                                    });

                                    // Kart nömrəsi inputunda yalnız 16 rəqəmə icazə ver
                                    cardInput.addEventListener("input", function () {
                                        this.value = this.value.replace(/[^0-9]/g, '').substring(0, 16);
                                    });
                                });
                            </script>


                            

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- content close -->