@using Rent_A_Car.BL.DTOs.Profile
@using Rent_A_Car.CORE.Entities
@model ProfileDTO
<!-- content begin -->
<div class="no-bottom no-top zebra" id="content">
	<div id="top"></div>

	<!-- section begin -->
	<section id="subheader" class="jarallax text-light">
		<img src="~/images/background/14.jpg" class="jarallax-img" alt="">
		<div class="center-y relative text-center">
			<div class="container">
				<div class="row">
					<div class="col-md-12 text-center">
						<h1>Mesajlar</h1>
					</div>
					<div class="clearfix"></div>
				</div>
			</div>
		</div>
	</section>
	<!-- section close -->

	<section id="section-cars" class="bg-gray-100">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 mb30">
					<div class="card padding30 rounded-5">
						<div class="profile_avatar">
							<div style="color:limegreen" class="profile_img">

									<img src="~/img/users/admin.jpg" alt="Profile Photo">

							</div>
							<div class="profile_name">
								<h4>
									@Model.Fullname
									<span class="profile_username text-gray">@Model.Email</span>
								</h4>
							</div>
						</div>
						<div class="spacer-20"></div>
						<ul class="menu-col">
							<li><a asp-action="Index" asp-controller="Profile" asp-route-username="@Model.Username"  ><i class="fa fa-home"></i>Profil</a></li>
							<li><a asp-action="MyAdvertisement" asp-controller="Profile" asp-route-username="@Model.Username"><i class="fa fa-calendar"></i>Elanlarım</a></li>
							<li><a asp-action="FavouriteCar" asp-controller="Profile" asp-route-username="@Model.Username"><i class="fa fa-car"></i>Sevimlilər</a></li>
							<li><a asp-action="Messages" asp-controller="Profile" asp-route-username="@Model.Username" class="active"><i  class="fas fa-envelope"></i>Mesajlar</a></li>
							<li><a asp-action="Tarixce" asp-controller="Profile" asp-route-username="@Model.Username"><i class="fas fa-clock-o"></i>Tarixçə</a></li>
							<li><a asp-action="SignOut" asp-controller="Account"><i class="fa fa-sign-out"></i>Çıxış</a></li>
						</ul>
					</div>
				</div>

				<div class="col-lg-9">
					<div class="card padding30 rounded-5 mb25">
						<h4>Mesajlarım</h4>

						<!-- Sabit uzunluq və scroll əlavə olundu -->
						<div style="display: flex; flex-direction: column; gap: 20px; padding: 20px; max-width: 900px;
                    margin: auto; height: 420px; overflow-y: auto; border: 1px solid #ddd; border-radius: 10px;">

							@if (ViewBag.Questions != null && ViewBag.Questions.Count > 0)
							{
								@foreach (var item in ViewBag.Questions)
								{
									@if (!string.IsNullOrEmpty(item.AdminResponse))
									{
										<div style="display: flex; flex-direction: column; padding: 25px; border-radius: 18px;
                                    box-shadow: 0 8px 12px rgba(0,0,0,0.1); width: 100%;
                                    @(item.UserId == User.Identity!.Name ?
                                    "align-self: flex-end; background: linear-gradient(135deg, #6dd5ed, #2193b0); color: white;"
                                    : "align-self: flex-start; background: linear-gradient(135deg, #ff9a9e, #fad0c4); color: black;")">

											<strong style="font-size: 20px; margin-bottom: 12px;">Siz : @item.QuestionText</strong>
											<p style="margin: 12px 0; font-size: 18px; line-height: 1.8;">Admin : @item.AdminResponse</p>
											<span style="font-size: 15px; opacity: 0.8; text-align: right;">
												@item.ResponseAt.ToString("dd MMM yyyy, HH:mm")
											</span>
										</div>
									}
								}
							}
							else
							{
								<h3 style="text-align: center; color: #555;">Heç bir məlumat yoxdur</h3>
							}

						</div>
					</div>
				</div>


			</div>
		</div>
	</section>


</div>
<!-- content close -->

<a href="#" id="back-to-top"></a>
