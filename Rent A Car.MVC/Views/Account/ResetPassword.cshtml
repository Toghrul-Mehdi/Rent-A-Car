@using Rent_A_Car.BL.DTOs.Auth
@{
	ViewData["Title"] = "Login";
}
@model ResetPasswordDTO
<!-- content begin -->
<div class="no-bottom no-top" id="content">
	<div id="top"></div>
	<section id="section-hero" aria-label="section" class="jarallax">
		<img src="~/images/background/2.jpg" class="jarallax-img" alt="">
		<div class="v-center">
			<div class="container">
				<div class="row align-items-center">
					<div class="col-lg-4 offset-lg-4">
						<div class="padding40 rounded-3 shadow-soft" data-bgcolor="#ffffff">
							<h4>Reset Password</h4>
							<div class="spacer-10"></div>
							<form class="form-border" method="post">
								<input type="hidden" asp-for="Token" />
								<input type="hidden" asp-for="Email" />
								<div class="field-set">
									<input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" />
									<span asp-validation-for="NewPassword" class="text-danger"></span>
								</div>	
								
								<div class="field-set">
									<input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
									<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
								</div>

								<div class="form-group row" asp-validation-summary="ModelOnly">
								</div>

								<div class="col-md-12">

									<div class="col-lg-3">
										<button type="submit" style="background-color:forestgreen" class="btn btn-primary">Reset</button>
									</div>

								</div>
							</form>

						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>
<!-- content close -->
